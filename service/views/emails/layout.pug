block vars

html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='x-apple-disable-message-reformatting')

    title=self.pkg.app.name

  body
    table(style={
        'background-color': 'white',
        'color': 'black',
        'width': '100%'
      }
      )

      tbody
        tr
          td(style={
              'white-space': 'pre-wrap',
              'padding-bottom': '1em'
            }
            )

            block body

      tfoot
        tr
          td(style={
              'border-top': '1px solid whitesmoke',
              'padding-top': '1em',
            }
            )

            table
              tbody
                tr
                  td
                    a(href=self.pkg.app.home,
                      style={
                        'text-decoration': 'none'
                        }
                        )

                      img(
                        src=`${selfp.pkg.app.home}/static/images/navbar-icon.png`,
                        style={
                          'height': 'auto',
                          'width': '2.8em'
                        }
                        )

                  td(style={
                      'vertical-align': 'top',
                      'padding-left': '0.5em',
                      'padding-top': '0.5em'
                    }
                    )

                    a(href=self.pkg.app.home,
                      style={
                        'text-decoration': 'none',
                        'display': 'block',
                        'line-height': 1
                      }
                      )

                      strong(style={
                        'color': 'black'
                        }
                        )

                        =self.pkg.app.name

                      br

                      small(
                        style={
                          'font-size': '0.75em',
                          'color': 'gray'
                        }
                        )

                        =self.pkg.app.description

